<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Laprass.MainPage"
             Title="Frutlass">

    <VerticalStackLayout Padding="30" Spacing="25" VerticalOptions="Center">


        <Label Text="Frutlass"
               FontSize="32"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="DarkBlue"/>

        <Label Text="Cesta de Frutas - Produtos Naturais"
               FontSize="18"
               HorizontalOptions="Center"
               TextColor="DarkGreen"/>

        <Button Text="Ir para Login"
                BackgroundColor="DarkBlue"
                TextColor="White"
                Clicked="OnLoginClicked"
                HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>
